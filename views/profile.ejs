                <label for="caption" class="form-label">Log</label>
                <textarea class="form-control" id="caption" name="caption" placeholder="3x12 on bench press @ 135                    3x12 face pull, at 50lb                          
                
                10 minute run at 6.5 mph 
                20 minute stairmaster at 7.8                                
                "></textarea>
              </div>
              <div class="mb-3">
                <label for="imgUpload" class="form-label">Image</label>
                <input type="file" class="form-control" id="imageUpload" name="file">
              </div>
              <button type="submit" class="btn btn-primary" value="Upload">Submit</button>
            </form>
          </div>
      </div>
     

